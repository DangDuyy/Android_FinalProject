<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/label_info_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin chuyển khoản"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:id="@+id/image_qr"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:src="@drawable/qr"
        android:scaleType="fitCenter"
        android:layout_marginBottom="16dp" />


    <Button
        android:id="@+id/button_upload_proof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPLOAD PROOF"
        android:textSize="18sp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="#1ABC9C"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRM"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#27AE60"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/text_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wait for 5s"
        android:textSize="14sp"
        android:visibility="gone" />
</LinearLayout>
