<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201a1a">

    <!-- Top bar: back, album title, menu -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back"
        android:tint="#fff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_album_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1 (Remastered)"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintEnd_toStartOf="@id/btn_menu"
        android:layout_marginTop="24dp"/>

    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_more_vert"
        android:tint="#fff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Album Art with rounded corners -->
    <ImageView
        android:id="@+id/img_album_art"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/tv_album_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/album_art_bg"
        android:elevation="8dp"
        android:contentDescription="@string/app_name" />

    <!-- Song Title -->
    <TextView
        android:id="@+id/tv_song_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="From Me to You - Mono / Remast"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/img_album_art"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Artist Name -->
    <TextView
        android:id="@+id/tv_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="The Beatles"
        android:textColor="#bbb"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_song_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="4dp"/>

    <!-- Like (heart) button -->
    <ImageButton
        android:id="@+id/btn_like"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_heart"
        app:layout_constraintTop_toTopOf="@id/tv_artist"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"/>

    <!-- SeekBar -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_artist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:progressTint="#fff"
        android:thumbTint="#fff"/>

    <!-- Current Time -->
    <TextView
        android:id="@+id/tv_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:38"
        android:textColor="#bbb"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintStart_toStartOf="@id/seekBar"
        android:layout_marginTop="4dp"/>

    <!-- Duration -->
    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:18"
        android:textColor="#bbb"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintEnd_toEndOf="@id/seekBar"
        android:layout_marginTop="4dp"/>

    <!-- Control Buttons Row: shuffle, prev, play, next, repeat -->
    <LinearLayout
        android:id="@+id/layout_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_current_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <ImageButton
            android:id="@+id/btn_shuffle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_shuffle"
            android:tint="#fff"/>

        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_prev"
            android:tint="#fff"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/play_button_bg"
            android:src="@drawable/ic_play"
            android:tint="#fff"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_next"
            android:tint="#fff"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btn_repeat"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_repeat"
            android:tint="#fff"/>
    </LinearLayout>

    <!-- Lyrics Button (Optional) -->
    <Button
        android:id="@+id/btn_lyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lyrics"
        android:backgroundTint="#ff9800"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/layout_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <fit24.duy.musicplayer.visualizer.MusicVisualizerView
        android:id="@+id/visualizer"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/btn_lyrics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/visualizer_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/visualizer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_visualizer_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_waveform"
            android:background="@drawable/circle_button_background"
            android:layout_marginEnd="16dp"
            android:padding="8dp"/>

        <ImageButton
            android:id="@+id/btn_visualizer_color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_palette"
            android:background="@drawable/circle_button_background"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Lyrics Container -->
    <include
        android:id="@+id/lyricsContainer"
        layout="@layout/lyrics_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/img_album_art"
        app:layout_constraintBottom_toTopOf="@id/layout_controls" />

    <!-- Edit Lyrics Button -->
    <ImageButton
        android:id="@+id/editLyricsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_edit"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/lyricsContainer" />

</androidx.constraintlayout.widget.ConstraintLayout> 